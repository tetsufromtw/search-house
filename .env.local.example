# Google Maps API Configuration
# 前端用 (瀏覽器可見，需要網域限制保護)
NEXT_PUBLIC_GOOGLE_API_KEY=your_google_maps_api_key_here

# 後端用 (伺服器私有，不會暴露給瀏覽器)
GOOGLE_API_KEY=your_google_maps_api_key_here

# Google Maps Control Settings
# 若不設定，將使用 Google Maps 預設值

# UI 控制項 (true/false)
NEXT_PUBLIC_MAP_ZOOM_CONTROL=true                # 縮放按鈕
NEXT_PUBLIC_MAP_TYPE_CONTROL=false               # 地圖類型選擇器 (衛星/地形)
NEXT_PUBLIC_MAP_SCALE_CONTROL=false              # 比例尺
NEXT_PUBLIC_MAP_STREET_VIEW_CONTROL=false        # 街景小人
NEXT_PUBLIC_MAP_ROTATE_CONTROL=false             # 旋轉控制
NEXT_PUBLIC_MAP_FULLSCREEN_CONTROL=false         # 全螢幕按鈕

# 互動功能
NEXT_PUBLIC_MAP_GESTURE_HANDLING=auto            # auto, cooperative, greedy, none
NEXT_PUBLIC_MAP_DISABLE_DOUBLE_CLICK_ZOOM=false  # 禁用雙擊縮放
NEXT_PUBLIC_MAP_SCROLLWHEEL=true                 # 滑鼠滾輪縮放
NEXT_PUBLIC_MAP_KEYBOARD_SHORTCUTS=true          # 鍵盤快捷鍵

# 地點資訊
NEXT_PUBLIC_MAP_CLICKABLE_ICONS=true             # 商家/POI 可點擊

# 其他設定
NEXT_PUBLIC_MAP_BACKGROUND_COLOR=#f5f5f5         # 地圖背景色
NEXT_PUBLIC_MAP_TYPE_ID=roadmap                  # roadmap, satellite, hybrid, terrain

# 自訂地圖樣式 (JSON 格式)
# 範例：隱藏商業 POI
NEXT_PUBLIC_MAP_CUSTOM_STYLES=[{"featureType":"poi.business","stylers":[{"visibility":"off"}]},{"featureType":"poi.park","stylers":[{"visibility":"on"}]},{"featureType":"transit.station","stylers":[{"visibility":"simplified"}]}]

# 極簡模式範例：
# NEXT_PUBLIC_MAP_ZOOM_CONTROL=false
# NEXT_PUBLIC_MAP_CLICKABLE_ICONS=false
# NEXT_PUBLIC_MAP_GESTURE_HANDLING=none

# 完整功能範例：
# NEXT_PUBLIC_MAP_TYPE_CONTROL=true
# NEXT_PUBLIC_MAP_STREET_VIEW_CONTROL=true
# NEXT_PUBLIC_MAP_FULLSCREEN_CONTROL=true